
@{
    ViewData["Title"] = "Creation";
}

<h1>Creation</h1>

@model AddDepartmentDto;
@{
    
}

<div class="card border border-primary">
    <div class="card-header  bg-primary">
        <h1 class="text-white">Create New Department</h1>
    </div>
    <div class="card-body">


        <form asp-action="Creation" method="post">

            <div class="form-group mb-3">
                <label class="form-label" asp-for="code"></label>
                <input asp-for="code" class="form-control" />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" cols="12" rows="12"></textarea>
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="mt-4 m-auto">
                <input class="btn btn-primary" type="submit" value="Create Department" />
                <a asp-action="Index" class="btn btn-outline-dark">Back to list</a>
            </div>
        </form>
    </div>
</div>

