
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

@using IKIEA.PL.ViewModels.DepartmentVms;
@model DepartmentViewModel;
@{
    ViewData["Title"] = "Edit";
}

<div class="card border border-primary">
    <div class="card-header  bg-primary">
        <h1 class="text-white">Create New Department</h1>
    </div>
    <div class="card-body">


        <form asp-action="Update" method="post">

            <div class="form-group mb-3">
                <input class="hidden" asp-for="Id"></input>
                <label class="form-label" asp-for="code"></label>
                <input asp-for="code" class="form-control" />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" cols="12" rows="12"></textarea>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mt-4 m-auto">
                <input class="btn btn-primary" type="submit" value="Update Department" />
                <a asp-action="Index" class="btn btn-outline-dark">Back to list</a>
            </div>
        </form>
    </div>
</div>


