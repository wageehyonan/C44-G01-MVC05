@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<div class="card border border-primary">
    <div class="card-header bg-primary">
        <h1 class="text-white">All Departments</h1>
    </div>
    <div class="card-body" align="center">
        <a class="btn btn-success mb-3" asp-action="Creation">Create New Department</a>
        @if (Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(d => d.Id)</th>
                        <th>@Html.DisplayNameFor(d => d.Name)</th>
                        <th>@Html.DisplayNameFor(d => d.Code)</th>
                        <th>@Html.DisplayNameFor(d => d.Description)</th>
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>

                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var Item in Model)
                    {
                        <tr class="text-center">
                            <td>@Item.Id</td>
                            <td>@Item.Name</td>
                            <td>@Item.Code</td>
                            <td>@Item.Description</td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Department" asp-route-Id="@Item.Id" asp-action="Details"> Details  </a>
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-controller="Department" asp-route-Id="@Item.Id" asp-action="Update">Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-controller="Department" asp-route-Id="@Item.Id" asp-action="Delete">Delete</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                <h2>No Department Found</h2>
            </div>
        }
    </div>
</div>



